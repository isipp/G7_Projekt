<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <EditText
        android:id="@+id/enter_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="account"
        />

    <EditText
        android:id="@+id/enter_amount_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_from"
        android:hint="amount" />

    <EditText
        android:id="@+id/type_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="income/expense"
        android:layout_below="@+id/enter_amount_trans"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/categories_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="categories"
        android:layout_below="@+id/type_trans"
        android:layout_alignParentStart="true"/>

</RelativeLayout>